---
import { Cart } from '../components/cart.solid';
import ShopItems from '../components/shop-items.astro';
import Layout from '../layouts/default.astro';
---

<Layout>
    <div class="shop">
        <h1>Shop Sandwich Kits</h1>

        <noscript>
            <p>
                Javascript is required to purchase things from the sndwch webstore <a href="tel:0885911331"></a>
            </p>
        </noscript>

        <div class="products">
            <ShopItems/>

            <Cart client:only="solid-js"/>
        </div>
    </div>
</Layout>

<style>
    .shop {
	padding: 3rem 5%;
}

.products {
	align-items: flex-start;
	display: grid;
	gap: 2rem;
	grid-template-columns: 1fr 260px;
	position: relative;
}
</style>